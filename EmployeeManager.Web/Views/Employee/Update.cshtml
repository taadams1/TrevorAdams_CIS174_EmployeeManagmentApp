@model EmployeeManager.Web.Models.UpdateEmployeeModel

<script src="~/Scripts/js/employee.js" type="text/javascript"></script>

<h2>Update Employee</h2>

<div class="row">
    <div class="col-md-3">
        <label>Search Name</label>
    </div>
    <div class="col-md-7">
        <input id="searchString" type="text" class=""/>
    </div>
    <div class="col-md-2">
        <button class="btn btn-dark" onclick="searchEmployee()">Search</button>
    </div>
</div>

<hr />

<div id="successMessage" class="hidden alert alert-success">
    Successfully Updated!
</div>
<div id="errorMessage" class="hidden alert alert-danger">
    Error Occurred!
</div>


    <div class="row">
        <div class="col-md-2">
            <label>First Name:</label>
        </div>
        <div class="col-md-4">
            <input id="firstName" type="text" class="input-validation-error text-box single-line" />
        </div>
        <div class="col-md-2">
            <label>Department:</label>
        </div>
        <div class="col-md-4">
            <input id="department" type="text" class="input-validation-error text-box single-line" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label>Middle Name:</label>
        </div>
        <div class="col-md-4">
            <input id="middleName" type="text" class="input-validation-error text-box single-line" />
        </div>
        <div class="col-md-2">
            <label>Job Title:</label>
        </div>
        <div class="col-md-4">
            <input id="jobTitle" type="text" class="input-validation-error text-box single-line" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label>Last Name:</label>
        </div>
        <div class="col-md-4">
            <input id="lastName" type="text" class="input-validation-error text-box single-line" />
        </div>
        <div class="col-md-2 ">
            <label>Salary:</label>
        </div>
        <div class="col-md-2">
            <input id="salary" type="text" class="input-validation-error text-box single-line" />
        </div>
        <div class="col-md-2">
            <select id="salaryType" class="input-validation-error text-box single-line">
                <option>Annual</option>
                <option>Hourly</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label>Birth Date:</label>
        </div>
        <div class="col-md-4">
            <input id="birthDate" type="date" class="input-validation-error single-line w-100" />
        </div>
        <div class="col-md-2">
            <label>Employee ID:</label>
        </div>
        <div class="col-md-4">
            <input id="employeeId" type="text" class="input-validation-error text-box single-line" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label>Hire Date:</label>
        </div>
        <div class="col-md-4">
            <input id="hireDate" type="date" class="input-validation-error single-line w-100" />
        </div>
        <div class="col-md-2">
            <label>Available Hours:</label>
        </div>
        <div class="col-md-4">
            <input id="availableHours" type="text" class="input-validation-error text-box single-line" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-11">
            <button class="btn btn-primary margin-top-md margin-left-md float-right" onclick="updateEmployee()">Save Update</button>
        </div>
        <div class="col-md-1">
            <button class="btn btn-outline-secondary margin-top-md margin-left-md float-right" onclick="clear()">Clear</button>
        </div>
    </div>
